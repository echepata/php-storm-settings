<templateSet group="Dart">
  <template name="if" value="if ($COND$) {&#10;  $STATEMENT$&#10;} else if ($COND2$) {&#10;  &#10;} else {&#10;  &#10;}" description="Create an if statement" toReformat="true" toShortenFQNames="true">
    <variable name="COND" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="STATEMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="COND2" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="DART_STATEMENT" value="true" />
    </context>
  </template>
  <template name="todo" value="// ToDo: $TODO$" description="Add a ToDo comment" toReformat="true" toShortenFQNames="true">
    <variable name="TODO" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="DART_STATEMENT" value="true" />
    </context>
  </template>
  <template name="log" value="debugPrint($LOG$);" description="Log to console" toReformat="true" toShortenFQNames="true">
    <variable name="LOG" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="DART" value="true" />
    </context>
  </template>
  <template name="mat" value="import 'package:flutter/material.dart';" description="Include the material design package" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="DART" value="true" />
    </context>
  </template>
  <template name="try" value="try {&#10;  $STATEMENTS$&#10;} catch (e) {&#10;    debugPrint(e.message);&#10;}" description="Build a try-catch construct" toReformat="true" toShortenFQNames="true">
    <variable name="STATEMENTS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="DART_STATEMENT" value="true" />
    </context>
  </template>
  <template name="!!" value="/// @author    $AUTHOR$&#10;/// @since     $DATE$&#10;/// @copyright $YEAR$ Carshare Australia Pty Ltd.&#10;" description="Add copyright information Dart" toReformat="true" toShortenFQNames="true">
    <variable name="AUTHOR" expression="user()" defaultValue="" alwaysStopAt="true" />
    <variable name="DATE" expression="date(&quot;yyyy-MM-dd&quot;)" defaultValue="" alwaysStopAt="true" />
    <variable name="YEAR" expression="date(&quot;yyyy&quot;)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="DART" value="true" />
    </context>
  </template>
  <template name="for" value="for (int i = 0; i &lt; $VAR$.length; i++) {&#10;  $END$&#10;}" description="for loop" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="DART" value="true" />
    </context>
  </template>
  <template name="scheme" value="Theme.of(context).colorScheme" description="get the color scheme from the theme" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="DART" value="true" />
    </context>
  </template>
</templateSet>