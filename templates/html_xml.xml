<templateSet group="html/xml">
  <template name="T" value="&lt;$TAG$&gt;&#10;    $SELECTION$&#10;&lt;/$TAGNAME$&gt;&#10;" description="Surround with &lt;tag&gt;&lt;/tag&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="TAG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TAGNAME" expression="firstWord(TAG)" defaultValue="&quot;&quot;" alwaysStopAt="false" />
    <context>
      <option name="HTML_TEXT" value="true" />
    </context>
  </template>
  <template name="T2" value="&lt;$TAG$&gt;&#10;    $SELECTION$&#10;&lt;/$TAGNAME$&gt;" description="Surround with &lt;tag&gt;&lt;/tag&gt; in HTML/JSP" toReformat="false" toShortenFQNames="false">
    <variable name="TAG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TAGNAME" expression="firstWord(TAG)" defaultValue="&quot;&quot;" alwaysStopAt="false" />
    <context />
  </template>
  <template name="SMARTY" value="[{$TAG$ $PARAM$}]&#10;    $SELECTION$&#10;[{/$TAGNAME$}]&#10;" description="Surround with [{tag}] [{/tag}]" toReformat="true" toShortenFQNames="true">
    <variable name="TAG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="PARAM" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TAGNAME" expression="firstWord(TAG)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="HTML" value="true" />
      <option name="XML" value="false" />
      <option name="XML_TEXT" value="false" />
    </context>
  </template>
  <template name="assign" value="[{assign var=&quot;$PARAM1$&quot; value=$PARAM2$}]" description="Creates ASSIGN construct" toReformat="false" toShortenFQNames="true">
    <variable name="PARAM1" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="PARAM2" expression="" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
</templateSet>