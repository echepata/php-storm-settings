  <template name="line" value="echo &quot;&lt;/br&gt;\n Filename: &quot; . __FILE__ . &quot; Line: &quot; . __LINE__ . &quot; &lt;/br&gt;\n&quot;;" description="'echo' with __LINE__ statement" toReformat="true" toShortenFQNames="true">
